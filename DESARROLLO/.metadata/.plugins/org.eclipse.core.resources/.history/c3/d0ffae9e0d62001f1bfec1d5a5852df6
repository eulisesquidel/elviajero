	   // Los productos del sistema slort Gestión
	   public boolean obtenerProductosdeslortGestion(String criterio){
		   try {
		   try {
			    CallableStatement call= hibSession.connection().prepareCall("{call spu_repar_obtiene_productos_v1_1(?)}");
			    call.setString(1, criterio);
			    //call.execute(); 
			    ResultSet rs = call.executeQuery();
			    // si no obtenemos registros es que no se econtraron diferencias
			    if (rs==null) return true; 
			    toArrayProductos(rs,"FG.ARTICULOS");
			    return true; 
		   } catch (SQLException e) { log.error("Metodo: obtenerProductosdeslortGestion ", e); error=e.getMessage() ; return false;} 
		   }catch (HibernateException e) { log.error("Metodo: obtenerProductosdeslortGestion ", e); error=e.getMessage() ; return false;}
	   }

